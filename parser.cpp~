#include <string>
#include <sstream>

using namespace std;

parser::parser(string del, int fields) {

    delimiter = del;
    numFields = fields;


}

string* parser::lineParser (string str){

    for (int i=0; i<str.length(); i++)
    {
        if (str[i] == delimiter)
            str[i] = ' ';

    }

    string arr[numFields];
    stringstream ss(str);
    string temp;
    while (ss >> temp)
        array.push_back(temp);

    return arr;

}
